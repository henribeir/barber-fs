// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Criando as tabelas relacionais do BD
model User {
  id        String    @id @default(uuid())
  email     String
  name      String
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Barbershop {
  //meu id vai ser string e vai ser gerada de forma aleatoria (uuid)
  id          String              @id @default(uuid())
  email       String
  name        String
  phone       String[]
  description String
  ImageUrl    String
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  services    BarbershopService[]
}

model BarbershopService {
  id           String     @id @default(uuid())
  name         String
  description  String
  ImageUrl     String
  // meu pre√ßo vai ter 10 casas antes da virgula e 2 depois
  price        Decimal    @db.Decimal(10, 2)
  barbershopId String
  //Barbeshop vai referenciar ID da tabela Barbershop
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  bookings     Booking[]
}

model Booking {
  id        String            @id @default(uuid())
  userID    String
  user      User              @relation(fields: [userID], references: [id])
  serviceID String
  service   BarbershopService @relation(fields: [serviceID], references: [id])
  date      DateTime
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}
